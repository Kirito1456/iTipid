<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".Home">

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/addBill"
      android:visibility="invisible"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      app:backgroundTint="#B1DBFF"
      android:layout_marginBottom="10dp"
      app:layout_constraintBottom_toTopOf="@+id/addGoal"
      app:layout_constraintEnd_toEndOf="@+id/addGoal"
      app:srcCompat="@drawable/baseline_water_damage_24" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/addGoal"
      android:visibility="invisible"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      app:backgroundTint="#B0DAFE"
      android:layout_marginBottom="10dp"
      app:layout_constraintBottom_toTopOf="@+id/addTransaction"
      app:layout_constraintEnd_toEndOf="@+id/addTransaction"
      app:srcCompat="@drawable/baseline_hotel_class_24" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/addTransaction"
      android:visibility="invisible"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:clickable="true"
      app:backgroundTint="#B0DAFE"
      app:layout_constraintBottom_toTopOf="@+id/mainButton"
      app:layout_constraintEnd_toEndOf="@+id/mainButton"
      app:srcCompat="@drawable/baseline_attach_money_24" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/mainButton"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_marginBottom="13dp"
      android:clickable="true"
      android:focusable="true"
      android:tint="@color/white"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.95"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tabLayout"
      app:layout_constraintVertical_bias="0.83"
      app:srcCompat="@drawable/baseline_add_24" />

  <TextView
      android:id="@+id/Balance"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#004AAD"
      android:gravity="center"
      android:padding="40dp"
      android:text="PHP 0.00"
      android:textColor="@color/white"
      android:textSize="30dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.tabs.TabLayout
      android:id="@+id/tabLayout"
      android:layout_width="0dp"
      android:layout_height="50dp"
      app:flow_horizontalBias="0.5"
      app:layout_constraintBottom_toTopOf="@id/viewPager2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/Balance"
      app:tabIndicator="@drawable/tab_indicator"
      app:tabIndicatorAnimationMode="elastic"
      app:tabIndicatorColor="@null"
      app:tabIndicatorGravity="stretch"
      app:tabMode="scrollable"
      app:tabSelectedTextColor="@color/white" />

  <androidx.viewpager2.widget.ViewPager2
      android:background="@color/white"
      android:id="@+id/viewPager2"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="0dp"
      app:flow_horizontalBias="0.5"
      app:layout_constraintBottom_toTopOf="@id/linearLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tabLayout">


  </androidx.viewpager2.widget.ViewPager2>

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="79dp"
      android:background="#d6d6d6"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        app:srcCompat="@drawable/baseline_home_24" />

    <ImageButton
        android:id="@+id/reportsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        app:srcCompat="@drawable/baseline_show_chart_24" />

    <ImageButton
        android:id="@+id/balanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        app:srcCompat="@drawable/baseline_credit_card_24" />

    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:srcCompat="@drawable/baseline_logout_24" />

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>